<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/marqueeView_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:alpha="0.6"
                android:background="@mipmap/ico_msg" />

            <com.sunfusheng.marqueeview.MarqueeView
                android:id="@+id/marqueeView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:alpha="0.6"
                app:mvInterval="5000"
                app:mvTextColor="@color/black"
                app:mvTextSize="14sp" />
        </LinearLayout>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_below="@id/marqueeView_bg"
            android:alpha="0.4"
            android:background="@color/black" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/mian_recycler_View1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view" />

        <LinearLayout
            android:id="@+id/mian_ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mian_recycler_View1"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="生活指数" />
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/mian_recycler_View2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mian_ll1"
            />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/mian_recycler_View2" />
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
    <com.example.chen.snailweather.view.BottomRecyclerView
        android:id="@+id/mian_recycler_View"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
